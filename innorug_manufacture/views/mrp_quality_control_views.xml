<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_quality_check_form_view_inherited" model="ir.ui.view">
        <field name="name">quality.check</field>
        <field name="model">quality.check</field>
        <field name="inherit_id" ref="quality_control.quality_check_view_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name= 'product_id']" position="before">
                    <field name="subcontractor_id" />
                </xpath>
                <xpath expr="//field[@name= 'team_id']" position="after">
                    <field name="subcontractor_id" />
                    <field name="active_cancel" attrs="{'invisible': [('quality_state', 'in',['none', 'pass'])]}"/>
                    <field name="active_delayed" />
                </xpath>
            </data>
        </field>
    </record>
    <record id="mrp_quality_check_tree_view_inherited" model="ir.ui.view">
        <field name="name">quality.check</field>
        <field name="model">quality.check</field>
        <field name="inherit_id" ref="quality_control.quality_check_view_tree"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name= 'name']" position="after">
                    <field name="subcontractor_id" />
                </xpath>
            </data>
        </field>
    </record>




    <!-- Quality Control Tree -->
    <record id="view_mrp_quality_control_tree" model="ir.ui.view">
        <field name="name">Quality Control</field>
        <field name="model">mrp.quality.control</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id"/>
                <field name="product_id"/>
                <field name="operation_id"/>
                <field name="subcontractor_id"/>
                <field name="quality_state"/>
            </tree>
        </field>
    </record>

    <!-- Quality Control Form -->
    <record id="view__mrp_quality_control_form" model="ir.ui.view">
        <field name="name">mrp.quality.control</field>
        <field name="model">mrp.quality.control</field>
        <field name="arch" type="xml">
            <form >
               <header>
                   
                    <field name="quality_state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="subcontractor_id"/>
                            <field name="product_id"/>
                            <field name="operation_id"/>
                            <field name="team"/>
                        </group>
                        <group>
                            <field name="picking_id"/>
                            <field name="type"/>
                            <!-- <field name="quality_state"/> -->
                            <fields name="lot_id"/>
                        </group>
                    </group>
                       <field name="picture"/>
                    <notebook>
                        <page string="Notes">
                            <field name="note"/>
                        </page>
                        <page string="Additional Notes">
                            <field name="additional_note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>







